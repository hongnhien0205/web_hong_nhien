@model WebDoCuoi.Models.KHACHHANG

@{
    ViewBag.Title = "EditAcc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="product_image_area">
        <h2 style="text-align:center; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; " ">PERSONAL INFORMATION</h2>
        <div>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <table class="center-body" style="width: 50%">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <tr>
                            <td width="150px">Họ và tên</td>
                            <td><input type="text" size="85" name="sTenKH" value="@Model.TenKH" required /></td>
                        </tr>
                        <tr>
                            <td>Tên đăng nhập</td>
                            <td><input type="text" size="85" name="sTenDN" value="@Model.TenDN" required /></td>
                        </tr>
                        <tr>
                            <td>Địa chỉ</td>
                            <td><input type="text" size="85" name="sDiachi" value="@Model.Diachi" required /></td>
                        </tr>
                        <tr>
                            <td>Số điện thoại</td>
                            <td><input type="text" size="85" name="sSDT" value="@Model.SDT" required /></td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td><input type="text" size="85" name="Email" value="@Model.Email" required /></td>
                        </tr>
                    </table>
                </div>
            }
        </div>
       
    <div style="text-align:center; padding: 10px">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>

</div>
<style>
    table, th, td {
        border: 1px solid white;
    }

    th, td {
        padding: 5px;
    }
</style>    

   