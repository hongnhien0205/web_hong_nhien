
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="cat_product_area section_gap">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-9">
                <div class="product_top_bar">
                    <div class="left_dorp">
                        <select class="sorting">
                            <option value="1">Default Sort</option>
                            <option value="2">Low - High</option>
                            <option value="4">High - Low</option>
                        </select>
                        <select class="show">
                            <option value="1">Show 9</option>
                        </select>
                    </div>
                </div>

                <div class="latest_product_inner">
                    <div class="row">
                        @Html.Action("ByCategory", "ProductCategory")
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="left_sidebar_area">
                    <aside class="left_widgets p_filter_widgets">
                        <div class="l_w_title">
                            <h3>Theo Nhà Thiết Kế</h3>
                        </div>
                        <div class="widgets_inner">
                            <ul class="list">
                                @Html.Action("DesignerCategory", "Home")
                            </ul>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
