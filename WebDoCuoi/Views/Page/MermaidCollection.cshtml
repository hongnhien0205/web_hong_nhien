@model IEnumerable<WebDoCuoi.Models.SANPHAM>
@{
    Layout = null;
}
@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-6">
        <div class="single-product">
            <div class="product-img">
                <img class="img-fluid w-100" src="~/Content/img/sanpham/@item.AnhSP" />
                <div class="p_icon">
                    <a href="@Url.Action("ProductDetails", "ProductCategory", new { id = item.MaSP })">
                        <i class="icon-eye-1"></i>
                    </a>
                    <a href="#">
                        <i class="icon-heart-empty-1"></i>
                    </a>
                    <a href="@Url.Action("AddCart", "ShoppingCart")">
                        <i class="icon-basket"></i>
                    </a>
                </div>
            </div>
            <div class="product-btm">
                <a href="#" class="d-block">
                    <h4>@item.TenSP</h4>
                </a>
                <div class="mt-3">
                    <span class="mr-4">@Html.FormatValue(@item.Gia, "{0:0,#}") VNĐ</span>
                </div>
            </div>
        </div>
    </div>
}
