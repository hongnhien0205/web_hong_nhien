@model WebDoCuoi.Models.DANHMUCSP

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; " ">THÊM DANH MỤC SẢN PHẨM</h2>

@using (Html.BeginForm("Create", "CategoryManagement", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <table class="center-body" style="width: 60%">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
           <tr>
               <td>Mã danh mục</td>
               <td><input type="text" size="70" name="sMaDM" value="@ViewBag.MaDM" required /></td>
           </tr>
            <tr>
                <td>Tên danh mục</td>
                <td><input type="text" size="70" name="sTenDM" value="@ViewBag.TenDM" required /></td>
            </tr>
        </table>    
</div>
}

<div style="text-align:center">
    <input type="submit" value="Create" class="btn btn-default" />
    @Html.ActionLink("Back to List", "Index")
</div>
