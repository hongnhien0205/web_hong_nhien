@model WebDoCuoi.Models.SANPHAM

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; " ">CHI TIẾT SẢN PHẨM</h2>


<div>
    <hr />
    <dl class="dl-horizontal">
        <div>
             <table class="center-body" style="width: 60%" >
            <tr>
                <td width="200px"> Mã sản phẩm </td>
                <td> @Html.DisplayFor(model => model.MaSP) </td>
            </tr>
            <tr>
                <td>Mã danh mục</td>
                <td>@Html.DisplayFor(model => model.DANHMUCSP.MaDM)</td>
            </tr>
            <tr>
                <td> Tên sản phẩm</td>
                <td>@Html.DisplayFor(model => model.TenSP)</td>
            </tr>
            <tr>
                <td>Ảnh sản phẩm </td>
                <td><img src="~/Content/img/sanpham/@Model.AnhSP" alt="@Model.TenSP"></td>
            </tr>
            <tr>
                <td>Nhà thiết kế </td>
                <td>@Html.DisplayFor(model => model.NTK.TenNTK)</td>
            </tr>
            <tr>
                <td>Màu sắc</td>
                <td>@Html.DisplayFor(model => model.MauSac)</td>
            </tr>
            <tr>
                <td> Chất liệu</td>
                <td> @Html.DisplayFor(model => model.ChatLieu)</td>
            </tr>
            <tr>
                <td>Mô tả</td>
                <td>@Html.DisplayFor(model => model.Mota)</td>
            </tr>
            <tr>
                <td>Giá</td>
                <td>@Html.DisplayFor(model => model.Gia, "{0:0,#}") VNĐ</td>
            </tr>
            <tr>
                <td>Số lượng tồn</td>
                <td>@Html.DisplayFor(model => model.SLton)</td>
            </tr>
        </table>
        </div>
       
   

    </dl>
</div>
<style>
    table, th, td {
        border: 1px solid white;

    }

    th, td {
        padding: 5px;
    }

</style>

<p style="text-align:center">
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaSP }) |
    @Html.ActionLink("Back to List", "Index")
</p>
